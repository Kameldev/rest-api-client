{% extends 'templates/app.twig'%}

{% block content %}


<h1>Article</h1>


    <div class="card horizontal">

         <div class="card-image">

         </div>

         <div class="card-stacked">
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">{{ article.titre }} [Par {{ article.created_by }} Le {{ article.created_at | date("d/m/Y") }}]</span>
                <p class="valign">{{ article.slug }}</p>
                <br>
                <p>{{ article.accroche }}</p>
                <div class="ui left action input">

                    <p>{{ article.corps }}</p>
                </div>
                <div class="ui left  input">
                    <p>{{ article.corps }}</p>
                </div>
             </div>

            <div class="card-action">
              <strong> Dernière Mise à Jour : </strong> {{ article.created_at }}
            </div>

        </div> 
    </div>
    <a class="btn waves-effect waves-light left" href="{{ path('articles.index') }}">Retour Liste
        <i class="material-icons left">send</i>
    </a>
    <form action="{{ path('article.delete',{'id':article.id}) }}" method="POST">
        <button class="btn waves-effect waves-light right" type="submit" >Supprimer

            <i class="material-icons left">send</i>
        </button>
    </form>
 


{% endblock %}
{% extends 'templates/app.twig'%}

{% block content %}
    <h1 class="center">Liste des Articles</h1>
    <div class="">

        <a  href="{{ path('article.show') }}" class="btn waves-effect waves-light right">Ajouter un Article
            <i class="material-icons right">send</i>
        </a>
    </div>

    {% for article in articles %}

        <div class="card horizontal">

            <div class="card-image">
                <img style="max-height:300px;" src="">
            </div>

            <div class="card-stacked">
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">{{ article.titre }} [ Par {{ article.created_by  }} Le {{ article.created_at | date("d/m/Y") }}]</span>
                    <p>{{ article.slug }}</p>
                    <br>



                </div>
                <div>

                </div>
                <div class="card-action">

                    <p>{{ article.corps | striptags | slice(0, 50) }}</p>

                    <a class="right" href="/article/{{ article.slug }} ">LIRE LA SUITE > </a>

                </div>
            </div>
        </div>

    {% endfor %}

    <ul class="pagination center-align">


    </ul>

{% endblock %}